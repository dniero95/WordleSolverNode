<body>

  <!-- start navbar -->
  <%- include('./includes/nav.ejs') %>
  <!-- end navbar -->

  <h1 id="pageTitle"><span class="badge bg-dark">Wordle Solver</span></h1>
  <form action="/word" method="POST">
    <div class="container px-4">
      <div class="row gx-5">
        <div class="col-6">
          <div id="solver" class="p-3 border bg-light">
            <h2 id="solvtitle">Solver</h2>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <!--skip letter once written-->



              <input type="text" name="randomLetters" id="random1" class="letterBox randomPosition" maxlength="1">
              <input type="text" name="randomLetters" id="random2" class="letterBox randomPosition" maxlength="1">
              <input type="text" name="randomLetters" id="random3" class="letterBox randomPosition" maxlength="1">
              <input type="text" name="randomLetters" id="random4" class="letterBox randomPosition" maxlength="1">
              <input type="text" name="randomLetters" id="random5" class="letterBox randomPosition" maxlength="1">
              <p>Lettere Presenti In Altre Posizioni</p>

              <input type="text" name="wrongLetters" id="wrong1" class="letterBox wrongLetters" maxlength="1">
              <input type="text" name="wrongLetters" id="wrong2" class="letterBox wrongLetters" maxlength="1">
              <input type="text" name="wrongLetters" id="wrong3" class="letterBox wrongLetters" maxlength="1">
              <input type="text" name="wrongLetters" id="wrong4" class="letterBox wrongLetters" maxlength="1">
              <input type="text" name="wrongLetters" id="wrong5" class="letterBox wrongLetters" maxlength="1">
              <p>Lettere Non Presenti</p>

              <input type="text" name="correctLetters" id="correct1" class="letterBox fixedPosition" maxlength="1">
              <input type="text" name="correctLetters" id="correct2" class="letterBox fixedPosition" maxlength="1">
              <input type="text" name="correctLetters" id="correct3" class="letterBox fixedPosition" maxlength="1">
              <input type="text" name="correctLetters" id="correct4" class="letterBox fixedPosition" maxlength="1">
              <input type="text" name="correctLetters" id="correct5" class="letterBox fixedPosition" maxlength="1">
              <p>Lettere Presenti In Una Certa Posizione</p>

              <div class="solvercontainer">
                <div class="row">
                  <div class="col">
                  </div>
                  <div class="col">
                  </div>
                  <div class="col">
                    <button type="submit" id="submitBtn" class="btn btn-dark">Filtra Soluzioni</button>
                  </div>
                </div>
              </div>
            </form>

            <p id="demo"></p>

          </div>
        </div>
  </form>
  <div class="col-6">
    <div id="solutions" class="p-3 border bg-light">
      <h2 id="solutionsTitle">Soluzioni</h2>
      <div class="randomLettersCount">
        <ul id="solutionsUl">
            <% for(let index in words) {  %>
                <li><%= words[index] %></li>
            <% } %>
        </ul>
      </div>
    </div>
  </div>
  </div>
  </div>
